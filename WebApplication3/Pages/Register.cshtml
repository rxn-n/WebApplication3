@page
@model WebApplication3.Pages.RegisterModel
@{
}

@section Scripts {
	<script>
		$(document).ready(function () {
			$("#registerForm").submit(function () {
				if (!isPasswordStrong()) {
					alert("Please use a strong password.");
					return false;
				}
			});

			function isPasswordStrong() {
				var password = $("#RModel_Password").val();
				var strongRegex = new RegExp("^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@@$!%*?&])[A-Za-z\\d@@$!%*?&]{12,}$$");
				return strongRegex.test(password);
			}
			function updatePasswordStrength() {
				var password = $("#RModel_Password").val();
				var strength = checkPasswordStrength(password);
				var feedbackElement = $("#password-strength");

				feedbackElement.text("Password Strength: " + strength);
				feedbackElement.data("strength", strength);
			}

			function checkPasswordStrength(password) {
				// Add your password strength check logic here
				// For example, check for length, uppercase, lowercase, numbers, special characters

				// Return a string indicating the password strength
				if (password.length < 8) {
					return 'Weak';
				} else if (password.length < 12) {
					return 'Moderate';
				} else {
					return 'Strong';
				}
			}
		});
	</script>
}

